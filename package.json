{
  "name": "Lionshare",
  "version": "1.1.0",
  "description": "Simple cryptocurrency portfolio for OS X",
  "main": "desktop/index.js",
  "scripts": {
    "clean": "./node_modules/.bin/rimraf desktop/dist dist/*",
    "build:webpack": "cross-env NODE_ENV=production BUILD_DEV=false webpack --config desktop/webpack/webpack.config.prod.js --progress --colors --display-error-details",
    "build": "npm run clean && npm run build:webpack",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build",
    "start": "ENV=development electron desktop",
    "dev": "concurrently -k 'node desktop/server.dev.js' 'npm start'",
    "lint": "eslint 'src/**/*.js' --quiet",
    "lint:staged": "lint-staged",
    "prettier": "prettier 'src/**/*.js' 'desktop/**/*.js' --write --single-quote --trailing-comma es5"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "yarn lint",
      "git add"
    ]
  },
  "build": {
    "appId": "com.jorilallo.lionshare",
    "icon": "src/assets/icons/icon.icns",
    "files": "!dist/*",
    "mac": {
      "target": "zip"
    }
  },
  "author": "Jori Lallo <jori@coinbase.com>, Ben Jennings <ben@coinbase.com>, Maksim Stepanenko <maksim@coinbase.com>",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "chart.js": "^2.4",
    "classnames": "^2.2.5",
    "electron-config": "^0.2.1",
    "electron-is-dev": "^0.1.2",
    "electron-machine-id": "^1.0.9",
    "lodash": "^4.17.2",
    "mobx": "^2.2.2",
    "mobx-react": "^4.0.3",
    "mobx-react-devtools": "^4.2.0",
    "numeral": "^2.0.4",
    "react": "^0.14.8",
    "react-chartjs-2": "^2.0.0",
    "react-dom": "^0.14.7",
    "reconnecting-websocket": "^3.0.3",
    "reflexbox": "^2.2.3",
    "universal-analytics": "^0.4.8"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "dotenv": "^2.0.0",
    "electron": "^1.4.15",
    "electron-builder": "^12.3.1",
    "electron-config": "^0.2.1",
    "electron-is-dev": "^0.1.2",
    "electron-machine-id": "^1.0.9",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-prettier": "^1.2.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "exports-loader": "^0.6.3",
    "express": "^4.13.4",
    "file-loader": "^0.8.5",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.3.1",
    "node-sass": "^3.4.2",
    "node-static": "^0.7.7",
    "pre-commit": "^1.2.2",
    "prettier": "git+ssh://git@github.com/prettier/prettier.git",
    "rebass": "^0.2.6",
    "resolve-url": "^0.2.1",
    "resolve-url-loader": "^1.4.3",
    "rimraf": "^2.5.2",
    "sass": "^0.5.0",
    "sass-loader": "^3.2.0",
    "sset": "0.0.4",
    "style-loader": "^0.13.0",
    "svg-react-loader": "^0.3.7",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.12",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-target-electron-renderer": "^0.4.0"
  }
}
